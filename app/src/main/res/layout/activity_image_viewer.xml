<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".imageviewer.ImageViewerActivity">

    <include layout="@layout/template_toolbar_gradient_rtl"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlackPlaceHolder"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.github.piasy.biv.view.BigImageView
                android:id="@+id/bigImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:failureImage="@drawable/ic_broken_image_black_24dp"
                app:failureImageInitScaleType="center"
                app:optimizeDisplay="true"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>