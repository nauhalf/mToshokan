<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!-- enable activity transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="TextAppearanceShowMoreLink">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ToshokanSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <!--<item name="android:textSize">@dimen/textSizePrimary</item>-->
        <!-- Query Text Color -->
        <!--<item name="android:textColorPrimary">@color/textColorPrimary</item>-->
        <!-- Hint Color -->
        <!--<item name="android:textColorHint">@color/textColorDisabled</item>-->
        <!-- Icon Color -->
        <item name="android:tint">@color/colorPrimary</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="Divider">
        <item name="android:layout_marginTop">@dimen/card_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CustomChip">
        <item name="android:paddingStart">@dimen/chip_custom_padding_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingEnd">@dimen/chip_custom_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/chip_custom_padding_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/chip_custom_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/chip_custom_padding_vertical</item>
    </style>

    <style name="BookTypeChip" parent="CustomChip">
        <item name="android:background">@drawable/background_gradient_primary_rounded</item>
    </style>

    <style name="AvailableChip" parent="CustomChip">
        <item name="android:background">@drawable/background_gradient_primary_rounded_available</item>
    </style>

    <style name="UnavailableChip" parent="CustomChip">
        <item name="android:background">@drawable/background_gradient_primary_rounded_unavailable</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
