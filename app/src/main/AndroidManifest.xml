<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.dicoding.naufal.mtoshokan">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.showbookmarkbook.ShowBookmarkBookActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.addbookmark.AddBookmarkActivity"
                android:label="@string/add_penanda"
                android:windowSoftInputMode="adjustResize|stateHidden"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.bookmarkbook.BookmarkBookActivity"
                android:label="@string/bookmark"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.borrowing.BorrowingActivity"
                android:label="@string/borrowing"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.book.BookActivity"
                android:label="Info Buku"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.searchresult.SearchResultActivity"
                android:label="@string/searching"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.search.SearchActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.notification.NotificationActivity"
                android:label="@string/notification"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.login.LoginActivity"
                android:windowSoftInputMode="adjustResize|stateHidden"

                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.reset.ResetActivity"
                android:label="@string/title_activity_reset"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
                android:name="com.dicoding.naufal.mtoshokan.ui.main.MainActivity"
                android:screenOrientation="portrait"/>
    </application>

</manifest>